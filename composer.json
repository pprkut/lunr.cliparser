{
  "name": "lunr/cliparser",
  "description": "Lunr.CliParser is a library for parsing command line arguments.",
  "keywords": [ "cli", "getopt" ],
  "homepage": "https://github.com/lunr-php/lunr.cliparser",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": ">=8.1",
    "lunr/halo": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": ">=9.0 <9.6",
    "ext-xdebug": "~3.1"
  },
  "config": {
    "optimize-autoloader": true
  },
  "autoload": {
    "psr-4": {"Lunr\\": "src/Lunr/"}
  }
}
